: PA5-TOGGLE
   20 DUP GPIOA GPIO-ODR @ AND 2/ ROTATE GPIOA GPIO-BSRR !
;

: PF6-TOGGLE
   40 DUP GPIOF GPIO-ODR @ AND 2/ 2/ ROTATE GPIOF GPIO-BSRR !
;

: MOTION-SENSOR
   BEGIN
      BUTTON-INIT
      SET-ALARM
      DEEPSLEEP-WFI
      BUTTON-PRESSED IF
         READ-DATE-TIME? IF
	    UPDATE-RTC
	 THEN
	 SEND-READINGS
      THEN
      ALARM-TRIGGERED IF
         RECORD-SENSORS
      THEN
   AGAIN
;

